{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "build": "npx webpack --config webpack.config.js",
    "build:watch": "npm run build -- --watch",
    "format": "prettier -w .",
    "lint": "eslint . && prettier --check .",
    "test": "jest --coverage"
  },
  "author": "",
  "license": "ISC",
  "jest": {
    "preset": "ts-jest",
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "testEnvironment": "node"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true,
      "jest": true,
      "mocha": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:react/recommended",
      "prettier"
    ],
    "ignorePatterns": [
      "/bundle/resources",
      "**/dist",
      "**/node_modules"
    ],
    "overrides": [
      {
        "files": [
          "*.js",
          "*.jsx"
        ],
        "rules": {
          "@typescript-eslint/no-unused-vars": "off",
          "@typescript-eslint/no-var-requires": "off",
          "no-constant-condition": "off",
          "no-empty": "off",
          "react/display-name": "off",
          "react/no-unknown-property": "off",
          "react/prop-types": "off"
        }
      },
      {
        "files": [
          "test/**/*.js",
          "test/**/*.jsx"
        ],
        "rules": {
          "no-redeclare": "off",
          "no-prototype-builtins": "off"
        }
      },
      {
        "files": [
          "*.test.ts",
          "*.test.tsx"
        ],
        "rules": {
          "@typescript-eslint/no-unused-vars": "off"
        }
      },
      {
        "files": [
          "*.ts",
          "*.tsx"
        ],
        "rules": {
          "@typescript-eslint/ban-types": "off",
          "@typescript-eslint/no-explicit-any": "off",
          "@typescript-eslint/no-unused-vars": "off",
          "no-empty": "off"
        }
      }
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint",
      "react"
    ],
    "settings": {
      "react": {
        "version": "18"
      }
    }
  },
  "dependencies": {
    "express": "^4.18.1",
    "joi": "^17.11.0"
  },
  "devDependencies": {
    "@aws-sdk/client-dynamodb": "^3.0.0",
    "@types/express": "^4.17.14",
    "@types/jest": "^29.1.1",
    "@types/node": "^18.8.0",
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "aws-crt": "^1.18.1",
    "jest": "^29.1.2",
    "serverless": "^3.22.0",
    "serverless-http": "^3.0.2",
    "serverless-offline": "^11.0.0",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.4.1",
    "typescript": "^5.2.2",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  }
}
